@model Goodhue.Models.Reservation

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Checkout: @ViewBag.Car.Description (@ViewBag.Car.ID)</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Checkout Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", placeholder = "mm/dd/yyyy" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
            <span class="col-md-offset-2 col-md-5 text-danger field-validation-error">@ViewBag.Message</span>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Checkout Hour</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" id="startHour" name="startHour" type="time" placeholder="--:-- --">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Return Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", placeholder = "mm/dd/YYYY" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
            <span class="col-md-offset-2 col-md-5 text-danger field-validation-error">@ViewBag.Message</span>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Return Hour</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" id="endHour" name="endHour" type="time" placeholder="--:-- --">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Destination, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Destination, new { htmlAttributes = new { @class = "form-control", placeholder = "City, county, etc."} })
                @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control", placeholder = "Department name or grant info" } })
                @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reserve" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Schedule", "Schedule", new { id = ViewBag.Car.ID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
