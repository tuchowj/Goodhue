@using Microsoft.AspNet.Identity
@model IEnumerable<Goodhue.Models.Reservation>

@{
    ViewBag.Title = "Admin";
}

@if (User.IsInRole("Admin")) {
    <div class="row">
        <h2 class="col-md-10">Reservations to be Charged</h2>
        <h2 class="col-md-2">@Html.ActionLink("View Unreturned Reservations", "Conflicts", null, new { @class = "btn btn-primary"})</h2>
    </div>
    
    @Html.ActionLink("Delete All", "DeleteAll") <span>|</span>
    @Html.ActionLink("Export to CSV", "WriteCSV")
    <table class="table sortable">
        <thead>
            <tr>
                <th>
                    Car ID
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TankFilled)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Miles)
                </th>
                <th data-defaultsort='disabled'></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (!item.IsActive)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Destination)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TankFilled)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Miles)
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}