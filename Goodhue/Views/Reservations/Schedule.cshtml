@model IEnumerable<Goodhue.Models.Reservation>

@{
    ViewBag.Title = "Schedule";
}
<div class="row">
    <h2 class="col-sm-10">Schedule: @ViewBag.Car.Description</h2>
    <h2 class="col-sm-2">@Html.ActionLink("Checkout", "Create", "Reservations", new { id = ViewBag.Car.ID }, new { @class = "btn btn-primary"})</h2>
</div>
<table class="table sortable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsActive && item.CarId == ViewBag.Car.ID)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |*@
                    @Html.ActionLink("Return", "Return", new { id = item.CarId, reservationId = item.ID }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }
    }
</table>