@model IEnumerable<Goodhue.Models.Comment>

@{
    ViewBag.Title = "Comments";
}

<div class="row">
    <h2 class="col-sm-10">Comments: @ViewBag.Car.Description</h2>
    <h2 class="col-sm-2">@Html.ActionLink("Delete All Comments", "DeleteComments", new { id = ViewBag.Car.ID }, new { @class = "btn btn-primary" })</h2>
</div>
<table class="table">
    <tr>
        <th style="width:20%;">
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
    </tr>
}

</table>
